<section class="card signup-card row g-3 align-items-center">
    <div class="card-body d-flex flex-column p-4 w-10">
        <div>
            <h2 class="card-title text-center">Signup</h2>
            <form class="form signup-form">
        </div>
        <div class="form-group p-2">
            <label for="name-signup" class="col-form-label">Username:</label>
            <input class="form-input form-control" type="text" id="name-signup" />
        </div>
        <div class="form-group p-2">
            <label for="email-signup" class="col-form-label">Email:</label>
            <input class="form-input form-control" type="text" id="email-signup" />
        </div>
        <div class="form-group p-3">
            <label for="password-signup" class="col-form-label">Password:</label>
            <input class="form-input form-control" type="password" id="password-signup" />
        </div>
        <div class="signup-buttons form-group p-4 d-flex justify-content-evenly">
            <button class="btn btn-light mx-3 w-50" type="submit">Signup</button>
            <a class="btn btn-light mx-3 w-50" href="/">Cancel</a>
        </div>
        </form>
    </div>
</section>

<script src="/js/signup.js"></script>