<main>

</main>
<h1>Update Balance</h1>


<form class="update-balance-form form">
    <div class="form-group">
        <label for="current-balance">Current Balance</label>
        <input type="text" class="form-control" id="current-balance" placeholder="Decimal Value" value="{{user.balance}}">
    </div>
    <div>
        <button id="update-btn" type="submit" class="btn btn-primary">Update</button>
        <button id="cancel-btn" type="cancel" onclick="window.history.back()" class="btn btn-secondary">Cancel</button>
    </div>
</form>

<script src="/js/update-balance.js"></script>