<section class="card login-card row g-3 align-items-center">
  <div class="card-body d-flex flex-column p-4 w-10">
    <div>
      <h2 class="card-title text-center">Login</h2>
      <form class="form login-form">
    </div>
    <div class="form-group p-4">
      <label for="email-login" class="col-form-label">Email:</label>
      <input class="form-input form-control" type="text" id="email-login">
    </div>

    <div class="form-group p-4">
      <label for="password-login" class="col-form-label">Password:</label>
      <input class="form-input form-control" type="password" id="password-login">
    </div>

    <div class="login-buttons form-group p-4 d-flex justify-content-evenly">
      <button class="btn btn-light mx-3 w-50" type="submit">Login</button>
      <a class="btn btn-light mx-3 w-50" href="/">Cancel</a>
    </div>
    </form>
  </div>
</section>

<script src="/js/login.js"></script>